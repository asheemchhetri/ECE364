#! /bin/bash
#
#$Author$
#$Date$
#$HeadURL$
#$Revision$
if (( $# != 1 ))
then
    echo 'Usage: process_temps.bash <input file>'
    exit 1
else
    if [[ ! -e $1 || ! -r $1 ]]
    then
        echo "Error: $1 is not a readable file"
	exit 2
    else
	exec 3<$1
	read line <&3
	while read line <&3
	do
	    avg=0
	    arr=($line)
	    for content in  ${arr[*]}
	    do
		(( avg=$avg+$content ))
	    done
	    (( avg=($avg-${arr[0]})/((${#arr[*]}-1) ))
	    echo "Average temprature for time ${arr[0]} was $avg C."
	    
	done
    fi
fi

exit 0