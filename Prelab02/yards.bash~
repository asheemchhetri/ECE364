#! /bin/bash
#
#$Author$
#$Date$
#$HeadURL$
#$Revision$
avg=0
var=0
if (( $# != 1 ))
then
    echo 'Usage: yards.bash <filename>'
else
    if [[ ! -e $1 || ! -r $1 ]]
    then
        echo "Error: $1 is not readable"
    else
        exec 3< $1
        while read line <&3
        do
	    arr=($line)
	    avg=0
	    var=0
            for (( i=1; i<${#arr[*]};i++ ))
	    do
		(( avg=$avg+${arr[i]} ))
	    done
	    ((avg=$avg/(${#arr[*]}-1)))
	    for (( i=1; i<${#arr[*]};i++ ))
	    do
		((var=(${arr[i]}-$avg)**2+$var))
	    done 
	    ((var=$var/(${#arr[*]}-1)))
	    echo "${arr[0]} schools averaged $avg yards receiving with a variance of $var"
	done
    fi
fi

exit 0
